# ==========================================
# DATABASE CONFIGURATION
# ==========================================
# MongoDB connection string
# Local: mongodb://localhost:27017/taskflow
# Cloud: mongodb+srv://username:password@cluster.mongodb.net/dbname
MONGODB_URI=mongodb://localhost:27017/taskflow

# ==========================================
# SERVER CONFIGURATION
# ==========================================
# Server environment: development or production
NODE_ENV=development

# Server port (default: 5000)
PORT=5000

# Server host (default: localhost)
HOST=localhost

# ==========================================
# AUTHENTICATION (JWT)
# ==========================================
# JWT secret key for signing tokens (CHANGE THIS IN PRODUCTION!)
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-key-change-in-production-min-32-chars-recommended

# JWT token expiration (examples: 7d, 24h, 1w)
JWT_EXPIRE=7d

# ==========================================
# CORS CONFIGURATION
# ==========================================
# Frontend URL for CORS (change to your frontend URL)
# Development: http://localhost:5173 (Vite default)
# Production: https://yourdomain.com
CORS_ORIGIN=http://localhost:5173

# ==========================================
# RATE LIMITING
# ==========================================
# Rate limit window in minutes (default: 15)
RATE_LIMIT_WINDOW=15

# Max requests per window (default: 100)
RATE_LIMIT_MAX=100

